<% if @answer.errors.present? %>
  document.getElementById('errors-answer').innerText = ''
  document.getElementById('errors-answer').insertAdjacentHTML('beforeend', '<%= errors_for(@answer) %>');
<% else %>
  <% return unless @answer.persisted? %>
  document.getElementById('errors-answer').innerText = ''
  document.getElementById('answer_list').insertAdjacentHTML('beforeend', '<%= j render @answer %>');
  document.getElementById('new_answer').reset();
  document.querySelector('.answers_count').innerHTML = "<strong> <%= @question.answers.count %>&nbsp;Answers</strong>"
<% end %>
