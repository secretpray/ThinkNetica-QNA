= simple_form_for([@question, @question.answers.build ], remote: true) do |f|

  = render 'shared/errors', resource: @answer
  div
    = f.input :body, label: false, input_html: { class: "text-area form-control" }, required: true, placeholder: '*Body (required)'
    = f.file_field :files, multiple: true, class: "form-control", placeholder: 'Add files...'
  br
  p= f.submit 'Create', class: "add-answer", id: "add-answer"
